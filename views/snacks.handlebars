<h1>Edit Entry Here</h1>

<form action="/edit" method="post">
{{#each my_data}}
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{this.name}}" required/>
  <label for="reps">Reps:</label>
  <input type="number" id="reps" name="reps" value="{{this.reps}}"/>
  <label for="weight">Weight:</label>
  <input type="number" id="weight" name="weight" value="{{this.weight}}"/>
  <label for="date">Date:</label>
  <input type="date" id="date" name="date" value="{{this.date}}"/>
  <label for="lbs">Lbs(0=No, 1=Yes):</label>
  <input type="number" id="lbs" name="lbs" value="{{this.lbs}}" min="0" max="1"/>
  <input type="hidden" name="id" value="{{this.id}}" />
  <input type="submit" value="Save" />
  {{/each}}
</form>